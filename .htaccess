# Increase upload size to 128MB
php_value upload_max_filesize 128M
php_value post_max_size 128M
php_value max_execution_time 300
php_value max_input_time 300

# Enable mod_rewrite
RewriteEngine On

# Redirect to HTTPS (if needed)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# NUCLEAR OPTION: Explicitly bypass rewrite for specific directories
# This MUST come FIRST before any other rules
RewriteRule ^admin(/.*)?$ - [L]
RewriteRule ^api(/.*)?$ - [L]
RewriteRule ^auth(/.*)?$ - [L]
RewriteRule ^member(/.*)?$ - [L]
RewriteRule ^pages(/.*)?$ - [L]
RewriteRule ^includes(/.*)?$ - [L]
RewriteRule ^uploads(/.*)?$ - [L]
RewriteRule ^public(/.*)?$ - [L]
RewriteRule ^sounds(/.*)?$ - [L]

# Allow all existing files to be accessed directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Allow all existing directories to be accessed directly
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Only rewrite non-existent files to index.php (for homepage routing)
RewriteRule ^(.*)$ /index.php?/$1 [L]
